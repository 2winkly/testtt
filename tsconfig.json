{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "importHelpers": true,
    "removeComments": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "files": ["src/index.ts"],
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
